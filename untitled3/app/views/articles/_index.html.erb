

<h1 style="text-align: center;">Nyheter</h1>
<div class="container">
   <!-- <button class="btn btn-outline-success" type="submit">Search</button> -->
</div>
  <div class="jumbotron">
      <% @article.each do |article| %>
        <h4><%= article.title %></h4>
        <br/>
        <p><%= article.body %></p>
        <button><%= link_to 'Show', article_path(article) %></button>
        <button><%= link_to 'Edit', edit_article_path(article) %></button>
      <hr/>
      <% end %>
    <% if @articles.blank? %>
    <h4>No matching articles containing the term <%= params[:search] %></h4>
      <% end %>
  </div>
</div>